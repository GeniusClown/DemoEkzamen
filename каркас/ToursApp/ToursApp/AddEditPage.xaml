<Page x:Class="ToursApp.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToursApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Authorization" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30"></TextBlock>
            <StackPanel>
                <TextBlock Text="Login" HorizontalAlignment="Center"></TextBlock>
                <TextBox Name="Login" Width="100"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Password" HorizontalAlignment="Center"></TextBlock>
                <TextBox Name="TxbPassword" Width="100" Visibility="Collapsed"></TextBox>
                <PasswordBox Name="UrPassword" Width="100"></PasswordBox>
                <TextBlock Text="Show Password" x:Name="TbxShowPass" MouseDown="TbxShowPass_MouseDown" MouseUp="TbxShowPass_MouseUp" HorizontalAlignment="Center"></TextBlock>
            </StackPanel>
            <Button Click="Enter" Background="DeepSkyBlue" Width="100">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
